        android:id="@+id/login_password_txt"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:text="god"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/login_login_txt"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/login_login_txt"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/login_login_txt" />

    <Button
        android:id="@+id/login_validate_btn"
        android:text="Connect"
        android:layout_height="74dp"
        android:layout_width="196dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
